    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'custom-shader'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=custom-shader",
                    "--package=custom-shader",
                ],
                "filter": {
                    "name": "custom-shader",
                    "kind": "bin"
                },
            },
            "args": [],
            "cwd": "${workspaceFolder}/sandbox/custom-shader",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}/sandbox/custom-shader",
            },
        },
    ]
}